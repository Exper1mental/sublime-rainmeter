<snippet>
	<content><![CDATA[
[Measure${1:FolderInfo}]
	Measure=Plugin
	Plugin=FolderInfo
	Folder=${2:path\to\folder}
	InfoType=${3:FileCount}
	RegExpFilter="${4:(?i).*\.(jpg|png|bmp|gif)}"
	$0]]></content>
	<!-- Optional: Set a tabTrigger to define how to trigger the snippet -->
	<tabTrigger>tfolderinfo</tabTrigger>
	<!-- Optional: Set a scope to limit where the snippet will trigger -->
	<scope>source.rainmeter</scope>
	<description>FolderInfo Plugin</description>
</snippet>